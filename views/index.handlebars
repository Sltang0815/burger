<h1>Burgers</h1>

<h2>Burgers to Eat!</h2>

<ul>
    {{#each burgers}}
    {{!-- true unless --}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            {{#if devoured}}Devoured!{{else}}Eaten!{{/if}}
        </button>


    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>Burger eaten!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}

        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            {{#if devoured}}Devoured!{{else}}Eaten!{{/if}}
        </button>


    </li>
    {{/if}}
    {{/each}}
</ul>






<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>